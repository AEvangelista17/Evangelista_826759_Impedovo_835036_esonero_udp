/*
 * protocol.h
 *
 * Shared header file for UDP client and server
 * Contains protocol definitions, data structures, constants and function prototypes
 */

#ifndef PROTOCOL_H_
#define PROTOCOL_H_

#include <stdint.h>

/*
 * ============================================================================
 * PROTOCOL CONSTANTS
 * ============================================================================
 */

#define SERVER_PORT 56700
#define MAX_CITY_LEN 64 // Max 63 caratteri per il nome della città + null terminator

// --- Tipi di richiesta ---
#define TYPE_TEMPERATURE 't'
#define TYPE_HUMIDITY    'h'
#define TYPE_WIND        'w'
#define TYPE_PRESSURE    'p'

// --- Codici di stato della risposta ---
#define STATUS_OK 0
#define STATUS_CITY_NOT_FOUND 1
#define STATUS_INVALID_REQUEST 2

/*
 * ============================================================================
 * PROTOCOL DATA STRUCTURES
 * ============================================================================
 */

// Richiesta client → server
// Dimensione minima per la serializzazione: 1 + 1 = 2 bytes (type + \0)
typedef struct {
    char type;                // 't', 'h', 'w', 'p'
    char city[MAX_CITY_LEN];  // nome città (null-terminated)
} weather_request_t;

// Risposta server → client
// Dimensione fissa per la serializzazione (senza padding): 4 + 1 + 4 = 9 bytes
typedef struct {
    unsigned int status;      // 0=successo, 1=città non trovata, 2=richiesta invalida
    char type;                // eco del tipo richiesto
    float value;              // dato meteo generato
} weather_response_t;

/*
 * ============================================================================
 * FUNCTION PROTOTYPES
 * ============================================================================
 */

// Funzioni meteo (implementate nel server)
float get_temperature(void);
float get_humidity(void);
float get_wind(void);
float get_pressure(void);

// Funzioni di utilità per il Server (richieste dal progetto)
int is_valid_city(const char *c);

#endif /* PROTOCOL_H_ */
